<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    tools:context=".LogInActivity">

    <LinearLayout
        android:id="@+id/linearLayout_register"
        android:layout_width="329dp"
        android:layout_height="153dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/log_card"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout_register2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.430"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/email_log"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_rectangle"
            android:ems="10"
            android:hint="Email "
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:textColor="@color/myWhite"
            android:textColorHint="@color/myWhite"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/password_log"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_rectangle"
            android:ems="10"
            android:hint="Password "
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="@color/myWhite"
            android:textColorHint="@color/myWhite"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_register2"
        android:layout_width="329dp"
        android:layout_height="155dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/log_card"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/reg_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.430"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/logInButton"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_rectangle"
            android:gravity="center"
            android:text="Log In"
            android:textColor="@color/myWhite"
            android:textSize="16sp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/google_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="70dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            app:srcCompat="@drawable/ic_googles" />

        <TextView
            android:id="@+id/google_text"
            android:layout_width="141dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-30dp"
            android:layout_marginBottom="20dp"
            android:text="Log In with google"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/reg_button"
        android:layout_width="192dp"
        android:layout_height="25dp"
        android:layout_marginBottom="15dp"
        android:background="@null"
        android:text="New user ? Create an account"
        android:textAllCaps="false"
        android:textColor="@color/myWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>